extends baseEmail

block content
    p Hi #{firstName},
    p We've received a request to reset your password .
    p If you didn't make the request, just ignore this email. Otherwise, you can reset your password.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reset Password
    p Thanks,
    p The Toundify Team